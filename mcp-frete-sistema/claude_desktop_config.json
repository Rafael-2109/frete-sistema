{
  "mcpServers": {
    "frete-sistema": {
      "command": "node",
      "args": ["/path/to/mcp-frete-sistema/dist/index.js"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}",
        "REDIS_URL": "${REDIS_URL}",
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
        "NODE_ENV": "production"
      },
      "capabilities": {
        "tools": true,
        "resources": true,
        "prompts": true,
        "sampling": true
      },
      "settings": {
        "maxRequestsPerMinute": 100,
        "timeout": 30000,
        "retryAttempts": 3,
        "logLevel": "info"
      }
    }
  },
  "installation": {
    "windows": {
      "configPath": "%APPDATA%/Claude/claude_desktop_config.json",
      "instructions": [
        "1. Build the MCP server: npm run build",
        "2. Copy this configuration to the Claude Desktop config file",
        "3. Update the 'args' path to point to your built index.js",
        "4. Set environment variables in your system",
        "5. Restart Claude Desktop"
      ]
    },
    "macos": {
      "configPath": "~/Library/Application Support/Claude/claude_desktop_config.json",
      "instructions": [
        "1. Build the MCP server: npm run build",
        "2. Copy this configuration to the Claude Desktop config file",
        "3. Update the 'args' path to point to your built index.js",
        "4. Set environment variables in ~/.zshrc or ~/.bash_profile",
        "5. Restart Claude Desktop"
      ]
    },
    "linux": {
      "configPath": "~/.config/Claude/claude_desktop_config.json",
      "instructions": [
        "1. Build the MCP server: npm run build",
        "2. Copy this configuration to the Claude Desktop config file",
        "3. Update the 'args' path to point to your built index.js",
        "4. Set environment variables in ~/.bashrc",
        "5. Restart Claude Desktop"
      ]
    }
  },
  "testing": {
    "commands": [
      "# Test MCP server locally",
      "npm run dev",
      "",
      "# Test with Claude Desktop",
      "# 1. Open Claude Desktop",
      "# 2. Check if 'frete-sistema' appears in available MCP servers",
      "# 3. Test each tool individually",
      "",
      "# Example queries to test:",
      "# - 'Analyze freight costs for last month'",
      "# - 'Show pending orders with delivery issues'",
      "# - 'Generate financial report for Q4'"
    ]
  }
}