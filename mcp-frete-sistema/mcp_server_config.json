{
  "name": "frete-sistema-mcp",
  "description": "MCP Server for Sistema de Frete - Advanced freight management system integration",
  "version": "1.0.0",
  "server": {
    "type": "node",
    "entrypoint": "dist/index.js",
    "port": 3000,
    "protocol": "stdio"
  },
  "capabilities": {
    "tools": true,
    "resources": true,
    "prompts": true,
    "sampling": true
  },
  "configuration": {
    "database": {
      "type": "postgresql",
      "connectionString": "${DATABASE_URL}",
      "poolSize": 10,
      "ssl": {
        "rejectUnauthorized": false
      }
    },
    "cache": {
      "enabled": true,
      "type": "redis",
      "connectionString": "${REDIS_URL}",
      "ttl": 3600
    },
    "security": {
      "authentication": "jwt",
      "encryption": true,
      "rateLimit": {
        "enabled": true,
        "maxRequests": 100,
        "windowMs": 60000
      }
    },
    "logging": {
      "level": "info",
      "format": "json",
      "destination": "file",
      "path": "logs/mcp-server.log"
    }
  },
  "domains": [
    "fretes",
    "pedidos",
    "entregas",
    "embarques",
    "financeiro",
    "transportadoras",
    "monitoramento"
  ],
  "integrations": {
    "claudeAI": {
      "apiKey": "${ANTHROPIC_API_KEY}",
      "model": "claude-3-sonnet-20240229",
      "maxTokens": 4096
    },
    "externalAPIs": {
      "correios": "${CORREIOS_API_KEY}",
      "maps": "${GOOGLE_MAPS_API_KEY}"
    }
  }
}