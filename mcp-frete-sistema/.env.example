# MCP FastAPI Freight System Configuration
# Copy this file to .env and update with your values

# ==========================================
# APPLICATION SETTINGS
# ==========================================
APP_NAME="MCP Freight System"
APP_VERSION="0.1.0"
APP_ENV="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ==========================================
# API SERVER CONFIGURATION
# ==========================================
HOST="0.0.0.0"
PORT=8000
WORKERS=4
RELOAD=true  # Auto-reload in development

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL="postgresql://user:password@localhost:5432/frete_sistema"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false  # SQL query logging

# Alternative database URL components (if not using DATABASE_URL)
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="frete_sistema"
DB_USER="postgres"
DB_PASSWORD="yourpassword"

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_SSL=false
REDIS_DECODE_RESPONSES=true
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECTION_POOL_MAX_CONNECTIONS=50

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================
SECRET_KEY="your-super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24

# JWT Configuration
JWT_SECRET_KEY="your-jwt-secret-key"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==========================================
# MCP CONFIGURATION
# ==========================================
MCP_SERVER_URL="ws://localhost:3000"
MCP_API_KEY="your-mcp-api-key"
MCP_TIMEOUT=30
MCP_MAX_RETRIES=3
MCP_RETRY_DELAY=1

# MCP Features
MCP_ENABLE_TOOLS=true
MCP_ENABLE_RESOURCES=true
MCP_ENABLE_PROMPTS=true

# ==========================================
# CORS CONFIGURATION
# ==========================================
CORS_ORIGINS="http://localhost:3000,http://localhost:5000"
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOW_HEADERS="*"

# ==========================================
# LOGGING & MONITORING
# ==========================================
LOG_FORMAT="json"  # json, text
LOG_FILE="logs/mcp_freight.log"
LOG_MAX_SIZE="10MB"
LOG_BACKUP_COUNT=5

# OpenTelemetry
OTEL_ENABLED=false
OTEL_SERVICE_NAME="mcp-freight-system"
OTEL_EXPORTER_ENDPOINT="http://localhost:4317"
OTEL_TRACES_EXPORTER="otlp"
OTEL_METRICS_EXPORTER="otlp"

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT="100/minute"
RATE_LIMIT_STORAGE_URL="redis://localhost:6379/1"

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@freightsystem.com"
SMTP_TLS=true
SMTP_SSL=false

# ==========================================
# EXTERNAL SERVICES
# ==========================================
# Claude AI Integration
CLAUDE_API_KEY="your-claude-api-key"
CLAUDE_MODEL="claude-3-sonnet-20240229"
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_MCP_TOOLS=true
FEATURE_MCP_RESOURCES=true
FEATURE_MCP_PROMPTS=true
FEATURE_ASYNC_PROCESSING=true
FEATURE_CACHE_ENABLED=true
FEATURE_METRICS_ENABLED=true

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
DEV_MOCK_EXTERNAL_SERVICES=false
DEV_SEED_DATABASE=false
DEV_ENABLE_PROFILING=false
DEV_SQL_ECHO=false

# ==========================================
# PRODUCTION SETTINGS
# ==========================================
PRODUCTION_DOMAIN="api.freightsystem.com"
PRODUCTION_SSL_REDIRECT=true
PRODUCTION_GZIP_COMPRESSION=true
PRODUCTION_TRUSTED_HOSTS="api.freightsystem.com"