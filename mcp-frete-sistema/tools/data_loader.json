{
  "tool": {
    "name": "frete_data_loader",
    "description": "Loads and retrieves data from the freight system database with intelligent filtering, pagination, and enrichment",
    "inputSchema": {
      "type": "object",
      "properties": {
        "domain": {
          "type": "string",
          "enum": ["fretes", "pedidos", "entregas", "embarques", "financeiro", "transportadoras", "monitoramento"],
          "description": "Data domain to query"
        },
        "filters": {
          "type": "object",
          "description": "Dynamic filters based on domain",
          "properties": {
            "ids": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Specific IDs to retrieve"
            },
            "dateRange": {
              "type": "object",
              "properties": {
                "start": { "type": "string", "format": "date-time" },
                "end": { "type": "string", "format": "date-time" },
                "field": {
                  "type": "string",
                  "enum": ["created_at", "updated_at", "delivery_date", "scheduled_date"],
                  "default": "created_at"
                }
              }
            },
            "status": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["pending", "active", "completed", "cancelled", "delayed", "in_transit", "delivered"]
              }
            },
            "search": {
              "type": "object",
              "properties": {
                "term": { "type": "string" },
                "fields": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            },
            "customFilters": {
              "type": "object",
              "additionalProperties": true,
              "description": "Domain-specific filters"
            }
          }
        },
        "options": {
          "type": "object",
          "properties": {
            "limit": {
              "type": "integer",
              "minimum": 1,
              "maximum": 1000,
              "default": 100
            },
            "offset": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            },
            "orderBy": {
              "type": "object",
              "properties": {
                "field": { "type": "string" },
                "direction": {
                  "type": "string",
                  "enum": ["asc", "desc"],
                  "default": "desc"
                }
              }
            },
            "include": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["related", "history", "metadata", "calculations", "enrichments"]
              },
              "description": "Additional data to include"
            },
            "format": {
              "type": "string",
              "enum": ["full", "summary", "minimal", "custom"],
              "default": "full"
            },
            "enrichData": {
              "type": "boolean",
              "default": true,
              "description": "Apply semantic and contextual enrichment"
            }
          }
        },
        "aggregations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["count", "sum", "avg", "min", "max", "group_by"]
              },
              "field": { "type": "string" },
              "groupBy": { "type": "string" },
              "alias": { "type": "string" }
            }
          }
        }
      },
      "required": ["domain"]
    },
    "outputSchema": {
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "metadata": {
          "type": "object",
          "properties": {
            "domain": { "type": "string" },
            "total": { "type": "integer" },
            "returned": { "type": "integer" },
            "offset": { "type": "integer" },
            "hasMore": { "type": "boolean" },
            "executionTime": { "type": "number" },
            "query": {
              "type": "object",
              "properties": {
                "sql": { "type": "string" },
                "params": { "type": "array" }
              }
            }
          }
        },
        "aggregations": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "value": { "type": ["number", "object"] },
              "groups": { "type": "array" }
            }
          }
        },
        "enrichments": {
          "type": "object",
          "properties": {
            "insights": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": { "type": "string" },
                  "message": { "type": "string" },
                  "severity": {
                    "type": "string",
                    "enum": ["info", "warning", "critical"]
                  },
                  "data": { "type": "object" }
                }
              }
            },
            "trends": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "metric": { "type": "string" },
                  "direction": {
                    "type": "string",
                    "enum": ["up", "down", "stable"]
                  },
                  "percentage": { "type": "number" }
                }
              }
            },
            "recommendations": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "action": { "type": "string" },
                  "reason": { "type": "string" },
                  "impact": { "type": "string" }
                }
              }
            }
          }
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "code": { "type": "string" },
              "message": { "type": "string" },
              "field": { "type": "string" }
            }
          }
        }
      }
    }
  }
}