{
  "mcpServers": {
    "frete-sistema": {
      "command": "python",
      "args": [
        "mcp/mcp_server.py"
      ],
      "cwd": "../",
      "env": {
        "FLASK_ENV": "development",
        "PYTHONPATH": "."
      }
    }
  },
  "version": "1.0.0",
  "description": "Configuração MCP para Sistema de Fretes",
  "capabilities": {
    "tools": [
      "consultar_embarques",
      "consultar_fretes", 
      "consultar_monitoramento",
      "consultar_transportadoras",
      "consultar_pedidos",
      "estatisticas_sistema",
      "consultar_portaria"
    ],
    "resources": [
      "frete://config/database",
      "frete://schemas/embarques",
      "frete://schemas/fretes",
      "frete://help/api"
    ]
  },
  "prompts": {
    "system": "Você é um assistente especializado no Sistema de Fretes. Você tem acesso completo aos dados de embarques, fretes, monitoramento de entregas, transportadoras, pedidos e controle de portaria. Use as ferramentas MCP disponíveis para consultar informações precisas e atualizadas do sistema.",
    "examples": [
      {
        "user": "Quais embarques estão ativos hoje?",
        "assistant": "Vou consultar os embarques ativos para você.",
        "tool_use": {
          "name": "consultar_embarques",
          "arguments": {
            "status": "ativo",
            "limite": 20
          }
        }
      },
      {
        "user": "Mostre estatísticas dos últimos 7 dias",
        "assistant": "Vou gerar as estatísticas do sistema para os últimos 7 dias.",
        "tool_use": {
          "name": "estatisticas_sistema", 
          "arguments": {
            "periodo_dias": 7
          }
        }
      },
      {
        "user": "Há fretes pendentes de aprovação?",
        "assistant": "Vou verificar os fretes com status pendente.",
        "tool_use": {
          "name": "consultar_fretes",
          "arguments": {
            "status_aprovacao": "pendente",
            "limite": 50
          }
        }
      }
    ]
  },
  "permissions": {
    "read": true,
    "write": false,
    "admin": false
  },
  "rate_limits": {
    "requests_per_minute": 100,
    "concurrent_requests": 10
  }
} 